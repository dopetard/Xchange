{
  "name": "walli-server",
  "version": "1.0.0",
  "description": "Backend for the walli prototype",
  "main": "bin/walli",
  "scripts": {
    "postinstall": "npm run compile",
    "compile": "cross-os precompile && tsc",
    "start": "node bin/wallid",
    "dev": "npm run compile && npm run start",
    "lint": "tslint --project tsconfig.json && tslint --config tslint-alt.json 'bin/*' 'test/**/*.ts'",
    "test": "npm run test:unit",
    "test:unit": "mocha -r ts-node/register test/unit/*"
  },
  "bin": {
    "walli": "./bin/walli"
  },
  "cross-os": {
    "precompile": {
      "linux": "rm -rf ./dist",
      "darwin": "rm -rf ./dist",
      "win32": "rd /q /s dist || cd ."
    }
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dopetard/walli-server.git"
  },
  "dependencies": {
    "cross-os": "^1.3.0",
    "typescript": "^3.0.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "ws": "^6.0.0",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.0",
    "@types/yargs": "^11.1.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.1",
    "ts-protoc-gen": "^0.7.6",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-no-circular-imports": "^0.5.2"
  }
}
