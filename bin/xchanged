#!/usr/bin/env node

const Xchange = require('../dist/Xchange').default;

const { argv } = require('yargs')
  .options({
    datadir: {
      describe: 'Data directory for Xchange',
      alias: 'w',
      type: 'string',
    },
    configpath: {
      type: 'string',
      describe: 'Path to the config file',
    },
    logpath: {
      describe: 'Path to the logfile',
      type: 'string',
    },
    loglevel: {
      describe: 'Verbosity of the logger',
      alias: 'l',
      type: 'string',
      choices: ['error', 'warn', 'info', 'verbose', 'debug', 'silly'],
    },
    walletpath: {
      type: 'string',
      describe: 'Path to the wallet file',
    },
    'grpc.host': {
      describe: 'Host for the Xchange gRPC interface',
      type: 'string',
    },
    'grpc.port': {
      describe: 'Port for the Xchange gRPC interface',
      type: 'number',
    },
    'grpc.certpath': {
      describe: 'Path to the TLS certificate of the Xchange gRPC interface',
      type: 'string',
    },
    'grpc.keypath': {
      describe: 'Path to the key of the TLS certificate of the Xchange gRPC interface',
      type: 'string',
    },
    'xud.host': {
      describe: 'Host of the XUD gRPC interface',
      type: 'string',
    },
    'xud.port': {
      describe: 'Port of the XUD gRPC interface',
      type: 'number',
    },
    'xud.certpath': {
      describe: 'Path to the certificate of the XUD gRPC interface',
      type: 'string',
    },
    currencies: {
      describe: 'Currencies that XChange should support',
      type: 'array',
    },
  });

// Delete non-config keys from argv
delete argv._;
delete argv.version;
delete argv.help;
delete argv.$0;

const xchange = new Xchange(argv);
xchange.start();
